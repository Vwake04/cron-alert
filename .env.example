# Database Configuration
DB_TYPE=sqlite  # or postgresql
DB_PATH=db.sqlite3  # for sqlite

# PostgreSQL specific settings (if DB_TYPE=postgresql)
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=upgrades

# SMTP Configuration (Gmail example)
SMTP_SERVER=smtp.gmail.com  # Default Gmail SMTP server
SMTP_PORT=587  # Default Gmail SMTP port
SMTP_USERNAME=your-email@gmail.com
# If using Gmail with 2FA, create an App Password at:
# https://myaccount.google.com/apppasswords
# If not using 2FA, you need to enable "Less secure app access" at:
# https://myaccount.google.com/lesssecureapps
SMTP_PASSWORD=your-app-password

# Other settings
SQL_ECHO=false

# Schedule Configuration (comma-separated 24h format times, e.g. "09:00,21:00")
SCHEDULE_TIMES=09:00,21:00 